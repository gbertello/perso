doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title !{perso["cv"]["name"]}
    link(rel="stylesheet", href="public/css/style.css", type="text/css")
    link(rel="stylesheet", href="public/css/print.css", type="text/css", media="print")
  body
    div#page
      include top.pug
      div#content
        div.section
          h2.section-title !{perso["cover_letter"]["title"]}
          hr
          div !{perso["cover_letter"]["text"]}
        img#signature(src=perso["cover_letter"]["signature"])
    script(src="static/js/jquery.min.js", type="text/javascript")
    script(src="static/js/application.js", type="text/javascript")



